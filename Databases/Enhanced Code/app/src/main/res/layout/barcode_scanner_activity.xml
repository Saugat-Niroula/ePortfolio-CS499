<?xml version="1.0" encoding="utf-8"?>
<!-- Root LinearLayout with vertical orientation and centered content -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <!-- TextView prompting the user to place the barcode within the scan area -->
    <TextView
        android:id="@+id/barcodePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place the barcode within the scan area"
        android:textSize="18sp" />

</LinearLayout>
